<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="48dp"
    android:gravity="center"
    tools:context=".ui.LoginActivity">
    <ImageView
        android:id="@+id/img_kpu"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_kpu"/>
    <TextView
        android:id="@+id/txt_kpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="App ini digunakan oleh petugas KPU untuk mendata peserta pemilu"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_regular"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_usn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/rect_form"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_psw"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:inputType="textPassword"
        android:paddingHorizontal="16dp"
        android:background="@drawable/rect_form"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_button"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="96dp"
        android:text="Log In"/>
    <TextView
        android:id="@+id/txt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="12dp"
        android:text="Belum punya akun? Daftar disini." />

</LinearLayout>